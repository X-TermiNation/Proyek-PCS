<Window x:Class="Proyek_PCS_toko.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyek_PCS_toko"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="LoginBackground.png"/>
        </Grid.Background>
        <TextBox x:Name="tbusername" HorizontalAlignment="Left" Height="23" Margin="336,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <TextBox x:Name="tbpassword" HorizontalAlignment="Left" Height="23" Margin="336,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="261,144,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="261,183,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <Button x:Name="btnlogin" Content="Login" HorizontalAlignment="Left" Margin="261,221,0,0" VerticalAlignment="Top" Width="229" Height="31" Click="btnlogin_Click">
            <Button.Background>
                <ImageBrush ImageSource="HomepageMaster.jpg"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
