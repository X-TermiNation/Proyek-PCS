<Window x:Class="Proyek.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyek"
        mc:Ignorable="d"
        Title="LoginForm" Height="357" Width="455">
    <Grid Margin="0,0,2,-4">

        <TextBox x:Name="tbusername" HorizontalAlignment="Left" Height="23" Margin="179,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <TextBox x:Name="tbpassword" HorizontalAlignment="Left" Height="23" Margin="179,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="105,78,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="105,117,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <Button x:Name="btnlogin" Content="Login" HorizontalAlignment="Left" Margin="105,155,0,0" VerticalAlignment="Top" Width="229" Height="31" Click="btnlogin_Click"/>
    </Grid>
</Window>
